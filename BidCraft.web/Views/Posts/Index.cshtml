@model IEnumerable<BidCraft.web.Models.PostIndexVM>

@{
    ViewBag.Title = "Index";
}

<h2>Post Feed</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.PostedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Url)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfBids)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AreMaterialsIncluded)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class='@(item.IsMine ? "mypost" : "")'>
            <td>@Html.ActionLink("Bids For This Item", "Index", "Bids", new { postId = item.Id }, null)</td>
            <td>
                @Html.DisplayFor(modelItem => item.PostedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfBids)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AreMaterialsIncluded)
            </td>
            <td>
                @if (item.IsMine)
                {
                    <text>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |

                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                    </text>
                }

                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
        foreach (var bid in item.Bids)
        {
            @bid.Amount
            @Html.ActionLink("Bid Now!", "create", "bids", new { postid = bid.PostId }, new { @class = "btn btn-primary" })

        }

    }
        
        
    

</table>
